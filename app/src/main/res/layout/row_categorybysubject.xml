<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fragmeCategorybySubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageviewCategorybySubject"
                android:scaleType="fitCenter"
                android:layout_width="180dp"
                android:layout_height="180dp"/>

        </FrameLayout>
        <TextView
            android:textColor="#f000"
            android:textStyle="bold"
            android:text="Nhạc VIệt Hot Trong Tháng 9"
            android:textSize="10sp"
            android:maxWidth="200dp"
            android:lines="1"
            android:id="@+id/textviewCategoryBysubject"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Singer"
            android:id="@+id/textviewNameSingerCategoryBySubject"
            android:textSize="7sp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>