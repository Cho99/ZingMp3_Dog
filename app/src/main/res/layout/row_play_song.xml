<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="1"
            android:layout_margin="10dp"
            android:id="@+id/textviewPlaySongIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#fff"
            android:text="Name Song"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:layout_toRightOf="@id/textviewPlaySongIndex"
            android:layout_marginLeft="10dp"
            android:id="@+id/textviewPlaySongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="13sp"
            android:text="Singer"
            android:maxWidth="250dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_below="@id/textviewPlaySongName"
            android:layout_toRightOf="@id/textviewPlaySongIndex"
            android:id="@+id/textviewPlaySongSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>