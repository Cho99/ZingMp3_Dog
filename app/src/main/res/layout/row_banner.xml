<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewBackgroudBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <View
        android:background="@drawable/custom_backgroud"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <RelativeLayout
        android:layout_alignBottom="@id/imageviewBackgroudBanner"
        android:id="@+id/realative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageviewBanner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Song Name"
            android:textSize="12sp"
            android:id="@+id/textviewTitleBanner"
            android:layout_alignTop="@id/imageviewBanner"
            android:layout_toRightOf="@id/imageviewBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/imageviewBanner"
            android:layout_below="@id/textviewTitleBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewContext"
                android:textColor="#ffffff"
                android:text="Chao Ban den voi Ca Khu moi nhat hien nay"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>