<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:background="@null"
        android:id="@+id/imageButtonPlayList"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>

    <ImageView
        android:layout_alignBottom="@id/imageButtonPlayList"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:id="@+id/imageviewPlayList"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:text="Nhung bai hit Acountic"
        android:layout_alignBottom="@id/imageviewPlayList"
        android:layout_toRightOf="@id/imageviewPlayList"
        android:layout_marginLeft="13dp"
        android:id="@+id/textviewNamePlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#ffffff" />


</RelativeLayout>